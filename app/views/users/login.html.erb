<%= render 'shared/errors',obj:@user%>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@article, :html => {class: "form-horizontal",rol: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username ,class: "form-control",placeholder: "Titl of an article",autofocus: true%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">
					<%= f.email_field :email,class: "form-control",placeholder: "Description  of anarticle",autofocus: true %>

				</div>
			</div>

		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: "btn btn-primary btn-larger" %>
			</div>
		</div>

		

		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
		[ <%= link_to "cancel request return to article listing", articles_path %> ]
		</div>
	</div>

</div>